- devise_links = []
- if controller_name != 'sessions'
  - devise_links = link_to('Sign in', new_session_path(resource_name))
- if devise_mapping.registerable? && controller_name != 'registrations'
  - devise_links = link_to('Signup', new_registration_path(resource_name))
- if devise.mapping.recoverable? && controller_name != 'passwords'
  - devise_links = link_to('Reset Password', new_password_path(resource_name))
- if devise_mapping.confirmable? && controller_name != 'confirmations'
  - devise_links = link_to 'Resend Confirmation', new_confirmation_path(resource_name)
- if devise_mapping.lockable? && resouce_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks'
  - devise_links = link_to 'Resend Unlock Code', new_unlock_path(resource_name)

%ul.sublinks
  = devise_links.map { |link| "<li>\n#{link}\n</li\n" }.join("\n|\n")

